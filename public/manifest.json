{
  "manifest_version": 3,
  "name": "LeetCode AI Code Assist",
  "description": "Boost your coding productivity on LeetCode with AI-powered assistance. Get hints, explanations, and solutions seamlessly.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon32.png"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ]
}
